{
  "name": "@jsonhero/path",
  "version": "1.0.1",
  "description": "An easy way to query and filter JSON objects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matt-aitken/json-hero-path.git"
  },
  "keywords": ["JSON", "Filtering", "Path"],
  "author": "Matt Aitken",
  "license": "GNU General Public License v3.0",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/matt-aitken/json-hero-path/issues"
  },
  "homepage": "https://github.com/matt-aitken/json-hero-path",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.2"
  },
  "files": [
    "lib/**/*"
  ]
}
